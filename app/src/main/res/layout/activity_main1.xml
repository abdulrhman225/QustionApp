<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_700"
    tools:context=".mainActivity1">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/faqs"
        android:layout_margin="@dimen/_20sdp"/>

    <TextView
        android:id="@+id/main_activity_tv_firstView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/black"
        android:text="First Theme"
        android:background="@drawable/background"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/main_activity_tv_secondView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:text="Second Theme"
        android:textColor="@color/black"
        android:background="@drawable/background"
        android:textSize="@dimen/_20sdp" />

    <TextView
        android:id="@+id/main_activity_tv_thirdView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:padding="@dimen/_10sdp"
        android:text="Third Theme"
        android:textColor="@color/black"
        android:background="@drawable/background"
        android:textSize="@dimen/_20sdp" />

</LinearLayout>